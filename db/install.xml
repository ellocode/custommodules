<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/custommodules/db" VERSION="20191209" COMMENT="XMLDB file for Moodle blocks/custommodules"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_custommodules" COMMENT="Criação da base de dados para o plugin custom módules">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="fullname" TYPE="char" LENGTH="300" NOTNULL="false" SEQUENCE="false" COMMENT="Nome do modulo"/>
        <FIELD NAME="courseids" TYPE="char" LENGTH="500" NOTNULL="false" SEQUENCE="false" COMMENT="Lista de ids dos cursos relacionados"/>
        <FIELD NAME="displayorder" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Ordem de exibição dos módulos"/>
        <FIELD NAME="description" TYPE="char" LENGTH="1300" NOTNULL="false" SEQUENCE="false" COMMENT="Descrição do módulo"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>